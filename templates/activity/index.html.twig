{% block stylesheets %}
    <style>
        #activity_calendar {
            max-width: 1000px;
            width: 80%;
            margin: auto;
        }
    </style>
{% endblock %}

{% block body %}
    <h2>Liste de mes activités</h2>
    {# {% for activity in activity_list %}
